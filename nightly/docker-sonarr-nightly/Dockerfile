RUN \
  echo "**** install build packages ****" && \
    apk add -U --update --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/main jq ffmpeg openssl curl wget tar mediainfo sqlite-libs tinyxml2 && \
