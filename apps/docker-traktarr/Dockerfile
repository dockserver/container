FROM ghcr.io/linuxserver/baseimage-alpine:null
LABEL org.opencontainers.image.source="https://github.com/dockserver/container"

ARG TARGETPLATFORM
ARG BUILDPLATFORM

ARG ALPINE_VERSION=null

ENV \
  TRAKTARR_DIR=/app/traktarr \
  TRAKTARR_BRANCH=master \
  TRAKTARR_CONFIG=/config/config.json \
  TRAKTARR_CACHEFILE=/config/cache.db \
  TRAKTARR_LOGFILE=/config/traktarr.log

RUN \
  echo "**** update packages ****" && \
    apk --quiet --no-cache --no-progress update && \
    apk --quiet --no-cache --no-progress upgrade && \
  echo "**** install build packages ****" && \
    apk add -U --update --no-cache bash curl bc jq findutils coreutils && \
  echo "*** cleanup system ****" && \
    apk del --quiet --clean-protected --no-progress && \
    rm -f /var/cache/apk/*

COPY ./apps/docker-traktarr/root/ /

VOLUME /config
